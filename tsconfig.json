{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "outDir": "./dist/",
    "noImplicitAny": true,

    "allowJs": true,
    "moduleResolution": "node",

    "baseUrl": ".",

    "esModuleInterop": true,

    "allowSyntheticDefaultImports": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
